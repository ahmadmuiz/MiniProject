<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Mini Project</title>
    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    @*<meta http-equiv="x-ua-compatible" content="IE=8">*@
    @*<meta http-equiv="X-UA-Compatible" content="IE=9" />*@
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @* custom theming/styles *@
    @Styles.Render("~/Content/css/css")
    @Styles.Render("~/Content/css/font-awesome")
    @Styles.Render("~/Content/css/sbadmin")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login Page</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="@Url.Action("Login", "Home")" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Username" name="username" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                @*<div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>*@
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                            </fieldset>
                        </form><br />
                        @{
                            if (!string.IsNullOrEmpty(ViewBag.Message))
                            { 
                            <div class="alert alert-warning ">
                                @Html.Raw(ViewBag.Message)
                            </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* custom theming / scripts *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/bundles/addin")*@
</body>
</html>
